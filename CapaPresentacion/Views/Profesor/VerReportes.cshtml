
@{
    Layout = "~/Views/Shared/_LayoutProfesor.cshtml";
    ViewBag.Title = "VerReportes";

}



<section class="w-100">
    <div class="surface-wrapper gradient shadow-sm p-4 p-md-5">

        <h1 class="h4 fw-bold mb-4">Reportes</h1>

        <!-- Filtros -->
        <div class="row g-3 mb-4">
            <div class="col-12 col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Curso" />
                    <span class="input-group-text">🔍</span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="input-group">
                    <input type="date" class="form-control" />
                    <span class="input-group-text">📅</span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Alumno" />
                    <span class="input-group-text">🔍</span>
                </div>
            </div>
        </div>

        <!-- KPIs -->
        <div class="row g-4 mb-4">
            <div class="col-12 col-md-4">
                <div class="card shadow-sm rounded-4 p-3 text-center">
                    <h6 class="fw-semibold">Avance promedio</h6>
                    <canvas id="avanceChart" height="120"></canvas>
                    <p class="mt-2">88%</p>
