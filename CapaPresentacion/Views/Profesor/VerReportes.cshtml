                    <tr><td>Alumno C</td><td>Curso C</td><td>Plan C</td><td>06/05/2025</td><td><a href="#">Ver</a></td></tr>
                    <tr><td>Alumno D</td><td>Curso D</td><td>Plan D</td><td>16/04/2025</td><td><a href="#">Ver</a></td></tr>
                    <tr><td>Alumno E</td><td>Curso E</td><td>Plan E</td><td>21/04/2025</td><td><a href="#">Ver</a></td></tr>
                    <tr><td>Alumno F</td><td>Curso F</td><td>Plan F</td><td>30/04/2025</td><td><a href="#">Ver</a></td></tr>
