
@{
    ViewBag.Title = "VerPerfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>VerPerfil</h2>*@

@{
    ViewData["Title"] = "Editar perfil — Educlick";
}

<section class="w-100">
    <div class="surface-wrapper gradient shadow-sm p-4 p-md-5">

        <!-- Botón superior -->
        <div class="mb-3">
            <button class="btn btn-outline-dark rounded-pill px-3">Editar perfil</button>
        </div>

        <h1 class="h4 fw-bold mb-4">Tus datos</h1>

        <form class="row g-4">

            <!-- Columna izquierda -->
            <div class="col-12 col-lg-8">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Nombres</label>
                        <input type="text" class="form-control" value="Jair" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Apellidos</label>
                        <input type="text" class="form-control" value="Quiroga Assat" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Usuario</label>
                        <input type="text" class="form-control" value="Jairqassat" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="jair@gmail.com" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Teléfono móvil</label>
                        <input type="tel" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Cumpleaños</label>
                        <input type="date" class="form-control" />
                    </div>
                </div>

                <!-- Intereses -->
                <div class="mt-4">
                    <h2 class="h6 fw-bold mb-2">Educación e intereses</h2>
                    <p class="mb-2 small fw-semibold">Temas de interés</p>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk1">
                        <label class="form-check-label" for="chk1">Negocios y finanzas</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk2">
                        <label class="form-check-label" for="chk2">Diseño gráfico</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk3">
                        <label class="form-check-label" for="chk3">Marketing</label>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: imagen -->
            <div class="col-12 col-lg-4">
                <div class="border rounded p-4 h-100 text-center">
                    <div class="mb-3">
                        <img src="https://via.placeholder.com/100x100.png?text=👤"
                             alt="Imagen de perfil"
                             class="img-fluid rounded-circle" />
                    </div>
                    <p class="small mb-1">Arrastra aquí tu imagen de perfil</p>
                    <a href="#" class="fw-semibold text-success">o sube una foto.</a>
                </div>
            </div>

            <!-- Botón Guardar -->
            <div class="col-12">
                <button type="submit" class="btn btn-dark rounded-pill px-4">
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</section>

<style>
    :root {
        --ec-surface: #B9FF66;
        --ec-surface-end: #dcdcdc;
    }

    .surface-wrapper {
        min-height: 100vh;
        background: var(--ec-surface);
        color: #0b2210;
        width: 100%;
        border-radius: 0;
    }

        .surface-wrapper.gradient {
            background: linear-gradient( 180deg, var(--ec-surface) 0%, var(--ec-surface) 35%, var(--ec-surface-end) 100% );
        }

    .form-control {
        border: 2px solid #000;
        border-radius: .5rem;
    }

    .form-check-input {
        border: 2px solid #000;
    }

    .btn-dark {
        font-weight: 600;
    }
</style>
