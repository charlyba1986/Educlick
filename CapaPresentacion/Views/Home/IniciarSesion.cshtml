@{
    ViewData["Title"] = "Iniciar sesión — Educlick";
}

<section class="login-wrapper d-flex w-100">

    <!-- Columna izquierda -->
    <div class="login-left d-flex flex-column justify-content-center p-5">
        <div class="mb-4">
            <h2 class="fw-bold display-6">Educlick</h2>
        </div>

        <div class="mb-4">
            <h1 class="fw-bold">Tu camino, tus tiempos.</h1>
            <h1 class="fw-bold">Donde nace tu futuro, sin limites ni barreras.</h1>
        </div>

        <p class="lead">Educlick está listo para vos: accedé y aprendé sin barreras.</p>

        <div class="mt-5">
            <img src="~/Content/images/login-illustration.png" alt="Login ilustración" class="img-fluid" />
        </div>
    </div>

    <!-- Columna derecha -->
    <div class="login-right d-flex flex-column justify-content-center align-items-center p-5">
        <div class="login-box w-100" style="max-width: 350px;">
            <h2 class="fw-bold mb-4">Educlick</h2>
            <h5 class="fw-semibold mb-3">Iniciar sesión</h5>

            <!-- Formulario -->
            <form>
                <div class="mb-3">
                    <input type="email" class="form-control rounded-pill" placeholder="Email" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control rounded-pill" placeholder="Contraseña" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-login rounded-pill fw-semibold">Ingresa</button>
                </div>
            </form>

            <!-- Links -->
            <div class="mt-3 text-center small">
                <a href="#" class="text-muted">¿Olvidaste tu contraseña?</a><br />
                <span>¿No tenés cuenta? <a href="#" class="fw-bold">Regístrate</a></span>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --ec-surface: #B9FF66;
        --ec-surface-end: #dcdcdc;
    }

    .login-wrapper {
        min-height: 100vh;
    }

    .login-left {
        flex: 1;
        background: linear-gradient( 180deg, var(--ec-surface) 0%, var(--ec-surface) 35%, var(--ec-surface-end) 100% );
        color: #0b2210;
    }

    .login-right {
        flex: 0 0 380px;
        background: #f1f1f1;
        position: relative;
    }

    .login-box {
        background: transparent;
    }

    .form-control {
        border: 2px solid #000;
        padding: .75rem 1rem;
    }

    .btn-login {
        background: var(--ec-surface);
        border: 2px solid #000;
        color: #000;
        padding: .75rem;
    }

        .btn-login:hover {
            background: #a3e95d;
        }
</style>
