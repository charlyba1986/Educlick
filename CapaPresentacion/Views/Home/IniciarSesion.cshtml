@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/Error.cshtml";
}

@section AuthLeft {
    <h2 class="fw-bold mb-4">Educlick</h2>
    <h1 class="fw-bold">Tu camino, tus tiempos.</h1>
    <h1 class="fw-bold">Donde nace tu futuro, sin límites ni barreras.</h1>
    <p class="lead">Educlick está listo para vos: accedé y aprendé sin barreras.</p>

    <div class="mt-5">
        <img src="~/Content/images/login-illustration.png"
             alt="Login ilustración"
             class="img-fluid" />
    </div>
}

<h2 class="fw-bold mb-3">Educlick</h2>
<h5 class="fw-semibold mb-4">Iniciar sesión</h5>

<form action="@Url.Action("VerificarUsuario","Home")" method="post">
    <div class="mb-3">
        <input type="email" name="Usuario" class="form-control" placeholder="Email" required />
    </div>
    <div class="mb-3">
        <input type="password"name="Contra" class="form-control" placeholder="Contraseña" required />
    </div>
    @*<div class="d-grid">
            <button type="submit" class="btn btn-auth">Ingresa </button>

        </div>*@
    <div class="d-grid">
        <button type="submit" class="btn btn-auth">Ingresa</button>
    </div>

    

</form>

<div class="mt-3 small text-center">
    <a href="#" class="text-muted">¿Olvidaste tu contraseña?</a><br />
    <span>¿No tenés cuenta? <a href="#" class="fw-bold">Regístrate</a></span>
</div>

