@model List<CapaEntidad.Curso>
@{
    ViewBag.Title = "NuevoCurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>NuevoCurso</h2>*@

@{
    ViewData["Title"] = "Nuevo curso — Educlick";
}

<section class="w-100">
    <div class="surface-wrapper gradient shadow-sm p-4 p-md-5">
        <h1 class="h4 fw-bold mb-4">Seleccioná un curso para inscribirte</h1>

        <div class="row g-4">
            @foreach (var curso in Model)
            {
                <div class="col-12 col-md-6">
                    <div class="card course-card h-100 shadow-sm p-4 d-flex flex-column justify-content-between">
                        <div>
                            <h2 class="h5 fw-bold">@curso.Nombre</h2>
                            <p class="text-muted small">@curso.Descripcion</p>
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Action("InscribirseEnCurso", "Alumno", new { idCurso = curso.IdCurso })" class="btn btn-dark rounded-pill w-100">
                                Inscribirse
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<style>
    :root {
        --ec-surface: #B9FF66;
        --ec-surface-end: #dcdcdc;
    }

    .surface-wrapper {
        min-height: 100vh;
        background: var(--ec-surface);
        color: #0b2210;
        width: 100%;
        border-radius: 0;
    }

        .surface-wrapper.gradient {
            background: linear-gradient( 180deg, var(--ec-surface) 0%, var(--ec-surface) 35%, var(--ec-surface-end) 100% );
        }

    .course-card {
        border: 2px solid #000;
        border-radius: 1rem;
        transition: transform .2s, background-color .2s;
    }

        .course-card:hover {
            transform: translateY(-3px);
            background-color: rgba(0,0,0,.05);
        }

    .btn-dark {
        font-weight: 600;
    }
</style>
