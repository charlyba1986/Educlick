<section class="w-100">
    <div class="surface-wrapper gradient shadow-sm p-4 p-md-5">

        <!-- Botón superior -->
        <div class="mb-3">
            <button class="btn btn-outline-dark rounded-pill px-3">Editar perfil</button>
        </div>

        <h1 class="h4 fw-bold mb-4">Tus datos</h1>

        <form class="row g-4" id="formPerfil">

            <!-- Columna izquierda -->
            <div class="col-12 col-lg-8">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Nombres</label>
                        <input type="text" class="form-control" value=" " />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Apellidos</label>
                        <input type="text" class="form-control" value=" " />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Usuario</label>
                        <input type="text" class="form-control" value=" " />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value=" " />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Teléfono móvil</label>
                        <input type="tel" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Cumpleaños</label>
                        <input type="date" class="form-control" />
                    </div>
                </div>

                <!-- Intereses -->
                <div class="mt-4">
                    <h2 class="h6 fw-bold mb-2">Educación e intereses</h2>
                    <p class="mb-2 small fw-semibold">Temas de interés</p>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk1">
                        <label class="form-check-label" for="chk1">Negocios y finanzas</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk2">
                        <label class="form-check-label" for="chk2">Diseño gráfico</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chk3">
                        <label class="form-check-label" for="chk3">Marketing</label>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: imagen -->
            <div class="col-12 col-lg-4">
                <div class="border rounded p-4 h-100 text-center">
                    <div class="mb-3">
                        <img src="https://via.placeholder.com/100x100.png?text=👤"
                             alt="Imagen de perfil"
                             class="img-fluid rounded-circle" />
                    </div>
                    <p class="small mb-1">Arrastra aquí tu imagen de perfil</p>
                    <a href="#" class="fw-semibold text-success">o sube una foto.</a>
                </div>
            </div>

            <!-- Botón Guardar -->
            <div class="col-12">
                <button type="submit" class="btn btn-dark rounded-pill px-4">
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</section>

<!-- Modal de confirmación -->
<div class="modal fade" id="datosModificadosModal" tabindex="-1" aria-labelledby="datosModificadosLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header bg-success text-white rounded-top-4">
                <h5 class="modal-title" id="datosModificadosLabel">
                    <i class="bi bi-check-circle-fill me-2"></i> Operación exitosa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="fs-5 mb-0">¡Modificaste tus datos exitosamente!</p>
            </div>
            <div class="modal-footer justify-content-center">
                <a href="@Url.Action("Index", "Alumno")" class="btn btn-dark rounded-pill px-4">OK</a>
            </div>
        </div>
    </div>
</div>

<!-- Script para mostrar el modal al guardar -->
<script>
    document.getElementById("formPerfil").addEventListener("submit", function (e) {
        e.preventDefault(); // evita el envío real del formulario (solo demostración)

        // Aquí podrías hacer un fetch/ajax a tu controlador si querés guardar en BD
        // y luego mostrar el modal:
        var modal = new bootstrap.Modal(document.getElementById('datosModificadosModal'));
        modal.show();
    });
</script>


